@model IndexViewModel

    <div class="pages">
    @if (Model.PageNumber != 1)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)" 
        asp-route-category="@Model.Category">&lt;</a>
    }
    @foreach (var p in Model.Pages)
    {
        if(p == -1){
            <span class="three-dots">
                ...
            </span>
        }
        else{
            string activeClass = (p == Model.PageNumber) ? "active" : "";

            <a asp-controller="Home" asp-action="Index" asp-route-pageNumber="@p"
            asp-route-category="@Model.Category" class="@activeClass">@p</a>
        }
    }
    @if (Model.NextPage)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)" 
        asp-route-category="@Model.Category">></a>
    }
</div>