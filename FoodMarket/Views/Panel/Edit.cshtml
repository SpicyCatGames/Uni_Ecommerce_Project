@model ItemViewModel

@{

}
<link href="~/lib/Trumbowyg-main/dist/ui/trumbowyg.min.css" rel="stylesheet"/>
<div>
    <form asp-controller="Panel" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input asp-for=Id type="hidden" />
        <div>
            <label>Title</label>
            <input asp-for="Title" />
        </div>
        <div>
            <label>Description</label>
            <input asp-for="Description" />
        </div>
        @*<div>
            <label>Tags</label>
            <input asp-for="Tags" />
        </div>*@
        <div>
            <label>Category</label>
            <select asp-for="Category">
                <option value="Grains">Grains</option>
                <option value="Others">Others</option>
            </select>
        </div>

        @*<div>
            <label>Body</label>
            <textarea id="editor" asp-for="Body"></textarea> 
        </div>*@
        <div>
            <label>Image</label>
            <input asp-for="CurrentImage" type="hidden" />
            <input asp-for="Image" />
        </div>
        <div>
            <label>Price</label>
            <input asp-for="Price" />
        </div>
        <div>
            <label>Stock</label>
            <input asp-for="Stock" />
        </div>
        <input type="submit" value="Submit" />
    </form>
</div>

@section scripts
{
    <script src="~/lib/jQuery-3.3.1/jquery-3.3.1.min.js"></script>
    <script src="~/lib/Trumbowyg-main/dist/trumbowyg.min.js"></script>
    <script>
        $('#editor').trumbowyg();
    </script>
}